
# Bochs配置文件

# 机器内存: 32MB
megs: 32

# 虚拟机的bios的rom
romimage: file=/bochs/share/bochs/BIOS-bochs-latest
# 虚拟机VGA bios的rom
vgaromimage: file=/bochs/share/bochs/VGABIOS-lgpl-latest

# 启动方式
boot: disk

# 关闭鼠标
mouse: enabled=0

# 硬盘设置
ata0: enabled=1, ioaddr1=0x1f0, ioaddr2=0x3f0, irq=14
ata0-master: type=disk, path="hd30M.img", mode=flat, cylinders=60, heads=16, spt=63
